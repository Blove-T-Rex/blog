<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
       <script type="text/javascript" src="/bootstrap/js/jquery-1.11.0.js"></script>
       <script type="text/javascript" src="/bootstrap/js/bootstrap.js"></script>
  </head>
  <body>
    <%- include("myheader.ejs",{title:"首页",isShow:true,isSearch:true})%>
    <p>Welcome to <%= welcome %>回来</p>

  
    <table class="table table-striped table-bordered ">
          <caption>Optional table caption.</caption>
          <thead>
            <tr>
              <th>作者</th>
              <th>标题</th>
              <th>创建时间</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody class="text">

           <%for(var i=0;i<list.length;i++) { %>
            <tr>
              <th scope="row"><%= list[i].author%></th>
              <td><a href="/detail/<%= list[i]._id%>"><%= list[i].title%></a></td>
              <td><%= list[i].createTime%></td>
              <td>
                <a class="btn btn-default" href="/article/update/<%= list[i]._id%>" role="button">更新</a>
                <a class="btn btn-danger" href="/article/delete/<%= list[i]._id%>" role="button">删除</a>
              </td>
          </tr>
           <%}%>

          </tbody>
        </table>
    
    <script>
        $(".search").on('click', function() {
          console.log(111);
          $(".text").empty()
        });
    </script>
        
  </body>
</html>
